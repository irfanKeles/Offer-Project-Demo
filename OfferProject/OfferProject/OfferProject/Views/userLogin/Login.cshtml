@model OfferProject.Models.Conctrate.Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>User Login </title>
    <link rel="stylesheet" href="~/FullTemplate/user_Login-Register/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/FullTemplate/user_Login-Register/css/style.css">
</head>
<body>
    <div class="row signin-content container">
        <div class="col-md-6 " style="max-width:500px">
            <div class="signin-image">
                <figure><img src="~/FullTemplate/user_Login-Register/images/loginphoto.png" alt="sing up image"></figure>
                <a href="/userLogin/Register" class="signup-image-link">Sing Up</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="signin-form">
                <h2 class="form-title">Sing In</h2>
                @using (Html.BeginForm("Login", "userLogin", FormMethod.Post))
                {
                    <div class="row" style="margin:1rem 0;">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(x => x.mail, "", new { @style = "color:red;" })
                        </div>
                        <div class="col-md-12 form-group">
                            <label><i class="zmdi zmdi-email"></i></label>
                            @Html.TextBoxFor(x => x.mail, new { @placeholder = "Mail" })
                        </div>
                    </div>
                    <div class="row" style="margin:1rem 0;">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(x => x.password, "", new { @style = "color:red;" })

                        </div>
                        <div class="col-md-12 form-group">
                            <label><i class="zmdi zmdi-lock"></i></label>
                            @Html.TextBoxFor(x => x.password, new { @placeholder = "Password", @type = "password", @id = "loginRegisterpass" })
                            <span id="loginRegistereye" style="position:relative; top:-18px; cursor:pointer;"><i style="float:right" class=" zmdi zmdi-eye"></i></span>
                        </div>
                    </div>
                    <div class="form-group form-button">
                        <button type="submit" class="form-submit" style="border:0px">Log In</button>
                    </div>
                    <div class="form-group">
                        <span style="color:red;"> @ViewBag.erorMessage</span>
                    </div>
                }

            </div>
        </div>
    </div>
    <script src="~/FullTemplate/UserTemplate/includeScript/MyMain.js"></script>
</body>
</html>
